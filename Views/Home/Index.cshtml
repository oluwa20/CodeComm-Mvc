@model CodeComm.Models.ViewModel.UserLoginDto
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutLogin";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="~/tailwind/tailwind.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#ffffff",
                        rose: "#F02C60",
                        blue: "#0F1017",
                        deepb: "#232168",
                        lightb: "#485B8C",
                    },
                },
            },
        };
    </script>
    <style>
        * {
            font-family: poppins;
        }
    </style>
    <!-- Your head content here -->
</head>
<body class="bg-primary w-full h-screen flex justify-center items-center selection:bg-transparent selection:text-rose">
    <main class="w-full px-5 flex flex-col gap-5 lg:gap-40 items-center lg:px-16 lg:flex-row">
            <div class=" lg:hidden"><img src="images/confetti.png" alt=""></div>
            <div class="lg:justify-start w-1/6 lg:w-1/2 mx-auto ml-9 md:ml-32">
                <img src="~/images/codecommlogo.png" alt="" class="lg:hidden">
                <img src="~/images/Logo svg.svg" alt="" class="hidden lg:block">
            </div>
        <div class="sm:ml-3 md:w-3/4 flex flex-col space-y-5 p-10 mx:auto w-full lg:w-1/2">
            <p class="font-semibold text-2xl">Login</p>
            <form asp-action="Index" asp-controller="Home" method="post">
                <div class="mt-3">
                    <span class="text-red-600">@ViewBag.ErrorMessage</span>
                </div>
                <div class="flex flex-col space-y-5">
                    <div>
                        <div>
                            <p class="text-md">Username or Email</p>
                            <!-- Update the input to bind to the model property -->
                            <input asp-for="UsernameOrEmail" class="px-4 py-3 w-full rounded-lg border-rose border bg-primary focus:outline-none focus:border-rose" placeholder="Solomemze">
                            <!-- Add validation error message -->
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <p class="text-md">Password</p>
                            <!-- Update the input to bind to the model property -->
                            <input asp-for="UserPassword" class="px-4 py-3 w-full rounded-lg border-rose border bg-primary focus:outline-none focus:border-rose" placeholder="User 1234">
                            <!-- Add validation error message -->
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <!-- Update the button to submit the form -->
                        <button type="submit" class="w-full py-3 bg-deepb rounded-lg text-primary">Log In</button>
                        <div class="text-center mt-3 hover:text-lightb">Forgotten password?</div>
                    </div>
                    <div class="flex items-center justify-center">
                        <hr class="border-t-2 w-1/2 border-gray-400 ">
                        <span class="bg-primary px-2">or</span>
                        <hr class="border-t-2 border-gray-400 w-1/2 ">
                    </div>
                    <!-- Update the button to create a new account -->
                   
                     <a asp-area="" asp-controller="Home" asp-action="Register" class="w-full py-3 bg-lightb rounded-lg text-primary">
                        Create new account
                    </a> 
                    @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CodeComm</a>*@             
                </div>
            </form>
        </div>
    </main>
</body>
