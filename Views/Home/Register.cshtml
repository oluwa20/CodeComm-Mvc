@model CodeComm.Models.ViewModel.CreateUserDto

@{
    ViewData["Title"] = "Sign up";
    Layout = "_LayoutLogin";
}

<script src="~/tailwind/tailwind.js"></script>
<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    primary: "#ffffff",
                    rose: "#F02C60",
                    blue: "#0F1017",
                    deepb: "#232168",
                    lightb: "#485B8C",
                },
            },
        },
    };
</script>

<style>
    (max-width: 358px) {
        .hidden-sm

    {
        display: none;
    }

    .visible-sm {
        display: block;
    }

    }

    (min-width: 359px) {
        .visible-custom

    {
        display: flex;
    }

    .hidden-custom {
        display: none;
    }

    }

    * {
        font-family: poppins;
    }
</style>

<body class="bg-primary w-full min-h-screen flex justify-center items-center selection:bg-transparent selection:text-rose">
    <main class="w-full px-5 flex flex-col gap-5 lg:gap-20 items-center lg:px-16 lg:flex-row">
        <div class="lg:hidden"><img src="images/confetti.png" alt=""></div>
        <div class="lg:justify-start w-1/6 lg:w-1/2 mx-auto ml-9 md:ml-32">
            <img src="~/images/codecommlogo.png" alt="" class="lg:hidden">
            <img src="~/images/Logo svg.svg" alt="" class="hidden lg:block">
        </div>
        <div class="sm:ml-3 md:w-3/4 flex flex-col space-y-5 p-10 mx:auto w-full lg:w-1/2">
            <p class="font-semibold text-2xl">Sign up</p>
            <div class="mt-3">
                <span class="text-red-600">@ViewBag.ErrorMessage</span>
            </div>
            <form asp-action="Register" asp-controller="Home" method="post">
                <div class="flex flex-col space-y-5">
                    <div class="flex space-x-5">
                        <input asp-for="Username" class="hidden-sm px-4 py-3 w-3/4 rounded-lg border-rose border bg-primary focus:outline-none focus:border-rose" placeholder="Username">
                    </div>
                    <span asp-validation-for="Username" class="text-rose"></span>

                    <div class="mt-3">
                        <input asp-for="UserEmail" class="hidden-custom visible-sm px-4 py-3 w-full rounded-lg border-rose border bg-primary focus:outline-none focus:border-rose" placeholder="Email Address">
                    </div>
                    <span asp-validation-for="UserEmail" class="text-rose"></span>

                    <div class="mt-3 relative flex items-center hidden-sm">
                        <input asp-for="UserPhone" type="text" class="px-4 py-3 pl-24 w-full rounded-lg border-rose border bg-primary focus:outline-none focus:border-rose" placeholder="Phone Number">
                    </div>
                    <span asp-validation-for="UserPhone" class="text-rose"></span>

                    <div class="mt-3">
                        <input asp-for="UserPassword" type="password" class="px-4 py-3 w-full rounded-lg border-rose border bg-primary focus:outline-none focus:border-rose" placeholder="Password">
                    </div>
                    <span asp-validation-for="UserPassword" class="text-rose"></span>
                    <div class="mt-3">
                        <input asp-for="ConfirmPassword" type="password" class="px-4 py-3 w-full rounded-lg border-rose border bg-primary focus:outline-none focus:border-rose" placeholder="Password">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-rose"></span>

                    <div class="mt-3">
                        <button type="submit" class="w-full py-3 bg-deepb rounded-lg text-primary">Sign up</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>
